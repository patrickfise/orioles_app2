<h1>
  Edit fan team #<%= @fan_team.id %>
</h1>

<hr>

<form action="/update_fan_team/<%= @fan_team.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @fan_team.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="team_id">
      Team
    </label>

    <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :created_at, @fan_team.team_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update fan team
  </button>
</form>

<hr>

<a href="/fan_teams">
  Go back
</a>
