<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All fan teams
    </h1>

    <a href="/fan_teams/new" class="btn btn-block btn-outline-secondary">
      Add a new fan team
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "fan_team_templates/fan_teams_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @fan_teams.each do |fan_team| %>
      <tr>
        <td>
          <%= fan_team.id %>
        </td>

        <td>
          <% if fan_team.user.present? %>
            <a href="/users/<%= fan_team.user.id %>">
              <%= fan_team.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if fan_team.team.present? %>
            <a href="/teams/<%= fan_team.team.id %>">
              <%= fan_team.team.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(fan_team.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(fan_team.updated_at) %> ago
        </td>

        <td>
          <a href="/fan_teams/<%= fan_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @fan_teams, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
