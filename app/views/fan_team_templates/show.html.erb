<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Fan team #<%= @fan_team.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/fan_teams" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/fan_teams/<%= @fan_team.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit fan team
        </a>
      </div>

      <div class="col">
        <a href="/delete_fan_team/<%= @fan_team.id %>" class="btn btn-block btn-outline-secondary">
          Delete fan team
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @fan_team.user.present? %>
          <a href="/users/<%= @fan_team.user_id %>">
            <%= @fan_team.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Team
      </dt>
      <dd>
        <% if @fan_team.team.present? %>
          <a href="/teams/<%= @fan_team.team_id %>">
            <%= @fan_team.team.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@fan_team.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@fan_team.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "fan_team_templates/fan_team_games" %>
  </div>
</div>
