<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All home teams
    </h1>

    <a href="/home_teams/new" class="btn btn-block btn-outline-secondary">
      Add a new home team
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "home_team_templates/home_teams_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Home name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @home_teams.each do |home_team| %>
      <tr>
        <!-- Display home_team.id start -->
        <td>
          <%= home_team.id %>
        </td>
        <!-- Display home_team.id end -->

        <!-- Display home_team.home_name start -->
        <td>
          <%= home_team.home_name %>
        </td>
        <!-- Display home_team.home_name end -->

        <!-- Display home_team.created_at start -->
        <td>
          <%= time_ago_in_words(home_team.created_at) %> ago
        </td>
        <!-- Display home_team.created_at end -->

        <!-- Display home_team.updated_at start -->
        <td>
          <%= time_ago_in_words(home_team.updated_at) %> ago
        </td>
        <!-- Display home_team.updated_at end -->

        <td>
          <a href="/home_teams/<%= home_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @home_teams, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
