<% if @game.errors.any? %>
  <% @game.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit game #<%= @game.id %>
</h1>

<hr>

<form action="/update_game/<%= @game.id %>" method="post">

  <div class="form-group">
    <label for="home_name">
      Home name
    </label>

    <input type="text" id="home_name" name="home_name" class="form-control" value="<%= @game.home_name %>">
  </div>

  <div class="form-group">
    <label for="away_name">
      Away name
    </label>

    <input type="text" id="away_name" name="away_name" class="form-control" value="<%= @game.away_name %>">
  </div>

  <div class="form-group">
    <label for="time">
      Time
    </label>

    <input type="text" id="time" name="time" class="form-control" value="<%= @game.time %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @game.date %>">
  </div>

  <div class="form-group">
    <label for="fanteam_id">
      Fanteam
    </label>

    <%= select_tag(:fanteam_id, options_from_collection_for_select(FanTeam.all, :id, :user_id, @game.fanteam_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="opponent_team_id">
      Opponent team
    </label>

    <%= select_tag(:opponent_team_id, options_from_collection_for_select(OpponentTeam.all, :id, :created_at, @game.opponent_team_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update game
  </button>
</form>

<hr>

<a href="/games">
  Go back
</a>
