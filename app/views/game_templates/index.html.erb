<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All games
    </h1>

    <a href="/games/new" class="btn btn-block btn-outline-secondary">
      Add a new game
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "game_templates/games_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Home name
        </th>

        <th>
          Away name
        </th>

        <th>
          Time
        </th>

        <th>
          Date
        </th>

        <th>
          Fanteam
        </th>

        <th>
          Opponent team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @games.each do |game| %>
      <tr>
        <td>
          <%= game.id %>
        </td>

        <td>
          <%= game.home_name %>
        </td>

        <td>
          <%= game.away_name %>
        </td>

        <td>
          <%= game.time %>
        </td>

        <td>
          <%= game.date %>
        </td>

        <td>
          <% if game.fanteam.present? %>
            <a href="/fan_teams/<%= game.fanteam.id %>">
              <%= game.fanteam.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if game.opponent_team.present? %>
            <a href="/opponent_teams/<%= game.opponent_team.id %>">
              <%= game.opponent_team.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(game.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(game.updated_at) %> ago
        </td>

        <td>
          <a href="/games/<%= game.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @games, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
