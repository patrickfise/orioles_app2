<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All games
    </h1>

    <a href="/games/new" class="btn btn-block btn-outline-secondary">
      Add a new game
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Home name
        </th>

        <th>
          Away name
        </th>

        <th>
          Time
        </th>

        <th>
          Date
        </th>

        <th>
          Fanteam
        </th>

        <th>
          Opponent team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @games.each do |game| %>
      <tr>
        <!-- Display game.id start -->
        <td>
          <%= game.id %>
        </td>
        <!-- Display game.id end -->

        <!-- Display game.home_name start -->
        <td>
          <%= game.home_name %>
        </td>
        <!-- Display game.home_name end -->

        <!-- Display game.away_name start -->
        <td>
          <%= game.away_name %>
        </td>
        <!-- Display game.away_name end -->

        <!-- Display game.time start -->
        <td>
          <%= game.time %>
        </td>
        <!-- Display game.time end -->

        <!-- Display game.date start -->
        <td>
          <%= game.date %>
        </td>
        <!-- Display game.date end -->

        <!-- Display game.fanteam_id start -->
        <td>
          <%= game.fanteam_id %>
        </td>
        <!-- Display game.fanteam_id end -->

        <!-- Display game.opponent_team_id start -->
        <td>
          <%= game.opponent_team_id %>
        </td>
        <!-- Display game.opponent_team_id end -->

        <!-- Display game.created_at start -->
        <td>
          <%= time_ago_in_words(game.created_at) %> ago
        </td>
        <!-- Display game.created_at end -->

        <!-- Display game.updated_at start -->
        <td>
          <%= time_ago_in_words(game.updated_at) %> ago
        </td>
        <!-- Display game.updated_at end -->

        <td>
          <a href="/games/<%= game.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
