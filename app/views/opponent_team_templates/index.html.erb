<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All opponent teams
    </h1>

    <a href="/opponent_teams/new" class="btn btn-block btn-outline-secondary">
      Add a new opponent team
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "opponent_team_templates/opponent_teams_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @opponent_teams.each do |opponent_team| %>
      <tr>
        <td>
          <%= opponent_team.id %>
        </td>

        <td>
          <%= time_ago_in_words(opponent_team.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(opponent_team.updated_at) %> ago
        </td>

        <td>
          <a href="/opponent_teams/<%= opponent_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @opponent_teams, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
