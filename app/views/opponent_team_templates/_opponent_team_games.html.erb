<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Games

    <a data-toggle="collapse" href="#opponent_team_games_new_form">
      Add game
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @opponent_team.games.each do |game| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/games/<%= game.id %>">
          <%= game.created_at %>
        </a>

        <a href="/delete_game_from_opponent_team/<%= game.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="opponent_team_games_new_form">
        <%= render partial: "opponent_team_templates/opponent_team_games_new_form" %>
      </div>
    </div>

  </ul>
</div>
