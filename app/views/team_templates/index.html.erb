<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All teams
    </h1>

    <a href="/teams/new" class="btn btn-block btn-outline-secondary">
      Add a new team
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "team_templates/teams_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @teams.each do |team| %>
      <tr>
        <td>
          <%= team.id %>
        </td>

        <td>
          <%= time_ago_in_words(team.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(team.updated_at) %> ago
        </td>

        <td>
          <a href="/teams/<%= team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @teams, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
