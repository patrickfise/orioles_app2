<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Team #<%= @team.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/teams" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link team start -->
      <div class="col">
        <a href="/teams/<%= @team.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit team
        </a>
      </div>
      <!-- Edit link team end -->

      <!-- Delete link team start -->
      <div class="col">
        <a href="/delete_team/<%= @team.id %>" class="btn btn-block btn-outline-secondary">
          Delete team
        </a>
      </div>
      <!-- Delete link team end -->
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@team.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@team.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
